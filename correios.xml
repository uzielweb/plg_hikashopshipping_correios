    <files>
        <filename plugin="correios">correios.php</filename>
    </files>
    <languages>
        <language tag="en-GB">en-GB.plg_hikashop.ini</language>
        <language tag="en-GB">en-GB.plg_hikashop.sys.ini</language>
        <language tag="pt-BR">pt-BR.plg_hikashop.ini</language>
